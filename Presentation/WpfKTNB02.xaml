                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Chuyên đề - KH" Binding="{Binding Path=COT03}" Width="100" IsReadOnly="False" FontWeight="Normal">
